<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#293859">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fine Section"
            android:textSize="20dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/edittext_file"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/exit_1"
            android:layout_gravity="end"/>

         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:src="@drawable/bribe"
             android:layout_gravity="center"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Reason :"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/sp_reason"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/edittextborder_new"
                android:backgroundTint="@color/light_grey"
                android:backgroundTintMode="add"/>

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/zxing_custom_possible_result_points"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fine Amount :"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextborder_new"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_fine_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fine Amount"
                android:editable="false"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fine Scetion :"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextborder_new"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_fine_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fine Section"
                android:editable="false"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add Fine Amount"/>

    </LinearLayout>

</LinearLayout>