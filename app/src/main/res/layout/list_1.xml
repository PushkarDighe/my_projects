<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rto_img"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/rto"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Vehicle No :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Fine Amount :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Fine Reason :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Section :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Date_Time :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="RTO Name :"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/c_vehicle_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Vehicle No"/>

                <TextView
                    android:id="@+id/c_fine_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Fine Amount"/>

                <TextView
                    android:id="@+id/c_fine_rsn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Fine Reason"/>

                <TextView
                    android:id="@+id/c_section"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Section"/>

                <TextView
                    android:id="@+id/c_d_and_t"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Date_Time"/>

                <TextView
                    android:id="@+id/c_rto_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="RTO Name "/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>