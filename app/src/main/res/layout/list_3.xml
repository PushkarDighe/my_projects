<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rto_img"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/rto"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Name :"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Aadhar No :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Mobile :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Email :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Address :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Vehicle No :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Chassis No :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Class :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Model :"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/c_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/c_aadhar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Aadhar No"/>

                <TextView
                    android:id="@+id/c_Mobile_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Mobile"/>

                <TextView
                    android:id="@+id/c_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Email"/>

                <TextView
                    android:id="@+id/c_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Address"/>

                <TextView
                    android:id="@+id/c_vno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Vehicle No"/>

                <TextView
                    android:id="@+id/c_vcno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Chassis No"/>

                <TextView
                    android:id="@+id/c_class"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Class"/>

                <TextView
                    android:id="@+id/c_model"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Model"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>